pipeline {
	agent {
		docker {
			image 'golang'
		}
	}

	stages {
		stage('Build') {
			failFast true
			parallel{
				stage('Stage 1'){
					steps{
						echo "executing stage 1"
						error 'error'
					}
				}
				stage('Stage 2') {
					steps {
						echo "executing stage 2"
						sleep 10
					}
				}
				stage('Stage 3') {
					steps {
						echo "executing stage 3"
						sleep 10
					}
				}
			}
		}
	}
}
