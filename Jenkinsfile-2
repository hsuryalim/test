pipeline {
	agent any
	
	options {
		timestamps()
	}

	environment {
		version="3.1.0"
		name="test"
	}

	stages {
		stage('tags') {
			when {
				buildingTag()
			}
			steps {
				echo "building the tag"
			}
		}
		stage('Environment') {
			when {
				branch 'main'
			}
			steps {
				echo "building main"
			}
		}

		stage ('Environment 2') {
			when {
				branch 'dev'
			}
			steps {
				echo "building dev"
			}
		}
		stage('Build') {
			when {
				anyOf {
					equals expected: "1.0.0", actual:version
					environment name:"name", value: "test"
				}
			}

			steps {
				echo "${name} - ${version}"
			}
		}
	}
}
