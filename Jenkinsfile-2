pipeline {
	agent {
		docker {
			image 'maven:3.5.3-jdk-10-slim'
			args '-e someEnv=dev'
		}
	}

	options {
		timestamps()
	}

	stages {
		stage('Build') {
			steps {
				checkout([$class: 'GitSCM',
					branches: [[name: "origin/dev"]],
					userRemoteConfigs: [[
						url: 'https://github.com/hsuryalim/test.git'
					]]
				])

				sh "echo $someEnv"
			}
		}
	}
}
