pipeline {
	agent any
	
	options {
		timestamps()
	}

	environment {
		version="2.0.0"
		name="test"
	}

	stages {
		stage('Build') {
			when {
				allOf {
					equals expected: "1.0.0", actual:version
					environment name:"name", value: "test"
				}
			}

			steps {
				echo "${name} - ${version}"
			}
		}
	}
}
