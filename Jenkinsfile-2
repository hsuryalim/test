pipeline {
	agent {
		docker {
			image 'golang:alpine'
		}
	}

	options {
		timestamps()
		skipStageAfterUnstable()
	}

	stages {
		stage('Build') {
			steps {
				echo "Hello World 3"
				script {
					currentBuild.result = 'UNSTABLE'
				}
			}
		}

		stage('Deploy') {
			steps  {
				echo "deploy running..."
			}
		}
	}
}
